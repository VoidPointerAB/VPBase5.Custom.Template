@using VPBase.Shared.Server.Configuration
@using VPBase.Shared.Server.Helpers
@using VPBase.Shared.Server.Models.ViewModels
@model VPBase.Custom.Server.Areas.Custom.Models.ViewModels.VP_Template_SimpleMvc.VP_Template_SimpleMvcListViewModel

@inject AppSettings AppSettings
@{
    Layout = ViewAdminHelper.BaseLayoutPath;

    var title = "Custom Simple VP Template Mvcs";

    ViewBag.Title = AppSettings.MenuSettings.SystemName + " - " + title;
}

@await Html.PartialAsync(ViewAdminHelper.BasePageHeadingPath, new PageHeading(title))

<style>
    .js-filter-container {
        width: 800px;
    }

        .js-filter-container > div > * {
            margin-right: 15px;
        }

            .js-filter-container > div > *:last-child {
                margin-right: 0;
            }

    .filter-group {
        display: inline-block
    }
    /*
                    .filter-group > * {
                    display: inline-block;
                    width: inherit;
                } */

    #load-button {
        margin-bottom: 4px;
    }
</style>

<div class="wrapper wrapper-content animated fadeIn">

    <div class="ibox js-filter-container">

        <div class="ibox-content">

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label">Title:</label>
                        <input class="form-control" value="@Model.TitleFilter" data-filter-name="title" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label">Status:</label>
                        <select class="form-control" data-filter-name="status">
                            @foreach (var opt in Model.StatusSelect)
                            {
                                <option value="@opt.Value" @(opt.Value == Model.StatusFilter ? "selected" : "")>@opt.Text</option>
                            }
                        </select>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label">Created Date:</label>

                        <div class="input-group input-daterange" id="date-inputs">
                            <input type="text" data-filter-name="startDate" class="form-control date-input" value="@(Model.StartDateFilter.HasValue ? Model.StartDateFilter.Value.ToString("yyyy-MM-dd") : "")"/>
                            <span class="input-group-addon">-</span>
                            <input type="text" data-filter-name="endDate" class="form-control date-input" value="@(Model.EndDateFilter.HasValue ? Model.EndDateFilter.Value.ToString("yyyy-MM-dd") : "")" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label">Is Active:</label>
                        <div class="i-checks">
                            <input type="checkbox" data-filter-name="isActive" @(Model.IsActiveFilter ? "checked" : "") />
                        </div>
                    </div>
                </div>
            </div>

            <button id="load-button" class="btn btn-primary">Load</button>
        </div>
    </div>

    <div class="ibox float-e-margins">

        <div class="ibox-content" id="table-container">

            <div class="table-responsive data-table-container">
                <div class="data-table-controls" style="display: block;">
                    <a href="@Url.Action("Add", "VP_Template_SimpleMvc")" class="btn btn-success" id="add-btn"><i class="fa fa-plus"></i> New</a>
                </div>

                <table class="table table-striped table-bordered table-hover" width="100%"></table>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/custom/js/VP_Template_SimpleMvc/VP_Template_SimpleMvcListManager.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            VP_Template_SimpleMvcListManager.Init();

            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue'
            });

            $('#date-inputs').datepicker({ autoclose: true, format: 'yyyy-mm-dd', todayHighlight: true });
        });
    </script>
}
