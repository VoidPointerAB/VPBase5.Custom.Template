@if (User.Claims.Any())
{
    <div class="col-sm-6 p-w-xs">
        <div class="ibox">
            <h3>Claims</h3>
            <table style="width: 100%;">
                <thead>
                <tr>
                    <th width="20%">claim.Type</th>
                    <th width="50%">claim.Value</th>
                    <th width="30%">claim.Issuer</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var claim in User.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                        <td>@claim.Issuer</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
